header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo: img(src='/img/logo-white.png', alt='Natours logo')
  nav.nav.nav--user
    if user 
      a.nav__el.nav_el--logout Log out
      a.nav__el(href='/me')
        -const userName = user.name.split(' ')[0]
        img.nav__user-img(src=`/img/users/${user.profilePhoto}`, alt=userName)
        spam= userName
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='#') Sign up
