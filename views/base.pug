doctype html
html
  head
    block head
      title Natours | #{title}
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='/js/bundled/index.css')
      link(rel='shortcut icon', type='image/png', href='/img/favicon.png')
      link(
        href='https://fonts.googleapis.com/css?family=Lato:300,300i,700',
        rel='stylesheet'
      )
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      script(defer,type="module",src="/js/bundled/index.js")

  body(data-alert=`${alert ? alert : ''}`)
    // Header:
    include _header

    // Content:
    block content

    // Footer:
    include _footer